<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">

  <Id>dc09c22e-c684-43de-8dac-961ae04e9cd4</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Smart AI Technologies</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="ðŸ§  Smart Excel Assistant"/>
  <Description DefaultValue="Your AI-powered Excel Assistant for Pivot, Chart, Macros, and Formulas in Hinglish." />

  <IconUrl DefaultValue="https://yourdomain.com/icon-32.png" />
  <SupportUrl DefaultValue="https://yourdomain.com/support" />

  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="SharedRuntime" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://yourdomain.com/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <ExtendedPermissions>
    <ExtendedPermission>ReadWriteWorkbook</ExtendedPermission>
  </ExtendedPermissions>

  <Runtime>
    <Override>
      <SourceLocation resid="TaskPane.Url" />
      <RequestedHeight>400</RequestedHeight>
    </Override>
  </Runtime>

  <Resources>
    <bt:Images xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
      <bt:Image id="icon-32" DefaultUrl="https://yourdomain.com/icon-32.png"/>
    </bt:Images>

    <bt:Urls>
      <bt:Url id="TaskPane.Url" DefaultValue="https://yourdomain.com/taskpane.html"/>
    </bt:Urls>
  </Resources>

</OfficeApp>
